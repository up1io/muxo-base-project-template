package server

import (
    localMiddleware "github.com/up1io/muxo/module/local/middleware"
    "github.com/up1io/muxo/middleware"
	"{{.ModName}}/server/handler"
	"net/http"
)

func addRoutes(mux *http.ServeMux) {
	withMiddlewares := middleware.CreateStack(
		localMiddleware.WithLocalization(),
	)

	mux.Handle("/", withMiddlewares(handler.HandleIndexPage()))
}
